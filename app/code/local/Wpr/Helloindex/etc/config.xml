<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Wpr_Helloindex>
			<version>0.8.0</version>
		</Wpr_Helloindex>
	</modules>
	<global>
		<models>
            <helloindex>
                <class>Wpr_Helloindex_Model</class>
                <resourceModel>helloindex_mysql4</resourceModel>
            </helloindex>
            <helloindex_mysql4>
                <class>Wpr_Helloindex_Model_Mysql4</class>
                <entities>
                    <blogpost>
                        <table>blogpost</table>
                    </blogpost>
                </entities>
            </helloindex_mysql4>
        </models>
		<blocks>
			<blockshellowpr>
				<class>Wpr_Helloindex_Block</class>
			</blockshellowpr>
		</blocks>
		<resources>
            <helloindex_setup>
                <setup>
                    <module>Wpr_Helloindex</module>
                </setup>
            </helloindex_setup>
        </resources>
        <events>
    		<controller_front_init_routers>
    			<observers><!-- Cuando tengamos el evento controller_front_init_routers -->
    				<wpr_helloindex_model_observer>
    					<type>singleton</type>
    					<class>Wpr_Helloindex_Model_Observer</class>
    					<method>checkForDomain</method><!-- Llamaremos a este mÃ©todo al recibir el evento. -->
    				</wpr_helloindex_model_observer>
    			</observers>
    		</controller_front_init_routers>
    	</events>
	</global>
	 <frontend>
	 	<layout>
			<updates>
				<identificativo>
					<file>hellowpr.xml</file>
				</identificativo>
			</updates>
		</layout>
		<routers>
			<hellowpr>
				<use>standard</use>
				<args>
					<module>Wpr_Helloindex</module>
					<frontName>hellowpr</frontName>
				</args>
			</hellowpr>
		</routers>
	</frontend>
</config>